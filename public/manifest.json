{
  "manifest_version": 3,
  "name": "CI Monitor",
  "version": "1.0",
  "description": "Monitor video playback time",
  "icons": {
    "128": "icon128.png"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [ "content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "history.html",
        "history.js",
        "styles.css",
        "content.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
} 